                    <li><a href="blog.html">Hỏi đáp</a></li>
                    <li><a href="gallery.html">Ảnh</a></li>
                    <li><a href="contact.html">Liên hệ</a></li>*@
                    @if(BlogLang.CurrentLang==(int)TLUCultureEnumType.vi)
                    {
                        <li><a href="@Url.Content("~/Home/ChangeLanguage/en")" title="English"><img src="@Url.Content("~/Content/images/English.png")" /></a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Content("~/Home/ChangeLanguage/vi")" title="English"><img src="@Url.Content("~/Content/images/Vietname.png")" /></a></li>
                    }
                </ul>
            </div>
            <!-- script-for-menu -->
            <script>
                $("span.menu").click(function () {
                    $("ul.navig").slideToggle("slow", function () {
                    });
                });
