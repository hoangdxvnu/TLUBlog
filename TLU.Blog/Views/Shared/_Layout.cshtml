    <script src="~/Content/js/responsiveslides.min.js"></script>
    <script>
        $(function () {
            $("#slider").responsiveSlides({
                auto: true,
                nav: true,
                speed: 500,
                namespace: "callbacks",
                pager: true,
            });
        });
    </script>
    <div class="banner">
        <div class="header">
            <div class="logo">
                <a href="index.html"><img src="~/Content/images/logo.jpg" alt="" /></a>
            </div>
            <div class="top-menu">
                <span class="menu"></span>
                <ul class="navig">
                    @foreach (var item in (ViewBag.Navigation as List<Navigation>))
                    {
                        //if (item.Link == string.Format("{0}/{1}", ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
                        if(ViewBag.Title==item.Link)
                        {
                            <li class="active"><a href="@item.Link">@item.Name</a></li>
                        }
                        else
                        {
                            <li><a href="@item.Link">@item.Name</a></li>
                        }
                    }
